
@model IEnumerable<AliexpressEF.YiDa.Domain.AliUserType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","AliUser")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100]
        });

    });


	//新建
        function c_dlg() {
            var url_str = '@Url.Action("Create","AliUser")';
            showdlg(url_str, 'c_dlg', ajaxAdd)
        }

        //编辑框
        function e_dlg() {
            var url = '@Url.Action("Edit","AliUser")/' + id;
            if (id != undefined) {
                var url = '@Url.Action("Edit", "Module")/' + id;
                showdlg(url, 'e_dlg', ajaxEdit)
            }
        }

        //异步新建提交
        function ajaxAdd() {
            formPost('c_form', '@Url.Action("Create", "AliUser")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "AliUser")', 'e_dlg', 'dg');
        }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Delete", "AliUser")/' + id;
                alert(1);
                delData(url, 'dg');

            }
        }

    //获取选中行
    function getselectedRow() {
        var row = $('#dg').datagrid('getSelected');
        if (row != undefined) {
            if (row.hasOwnProperty('Id')) {
                var id = row['Id'];
                return id;
            }
        }
        $.messager.show({
            title: '提示',
            msg: '请选择行',
            timeout: 3000,
            showType: 'slide'
        });
        return (undefined);
    }
     function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
      }
    function ShowAdvanced() {
    showSrarch('@Url.Action("Search", "AliUser")', 's_dlg', 'dg');
      }		

</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
            <th field="Id" width="100">
                Id
            </th>

            <th field="UserName" width="100">
                用户名
            </th>

            <th field="PassWord" width="100">
                密码
            </th>

            <th field="RealName" width="100">
                真实名称
            </th>

            <th field="Phone" width="100">
                手机
            </th>

            <th field="Address" width="100">
                地址
            </th>

            <th field="QQ" width="100">
                QQ
            </th>

            <th field="WW" width="100">
                WW
            </th>

            <th field="Tel" width="100">
                电话
            </th>

            <th field="Memo" width="100">
                Memo
            </th>

            <th field="Status" width="100">
                Status
            </th>


    	</tr>
		</thead>
		</table>
        <div id="toolbar">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="c_dlg();">新建</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a>  
		  <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
            <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="ShowAdvanced();">Advanced</a>
        </div> 
		<div id="mm" style="width: 120px">
                        <div data-options="name:'Id'">Id</div>
            <div data-options="name:'UserName'">用户名</div>
            <div data-options="name:'PassWord'">密码</div>
            <div data-options="name:'RealName'">真实名称</div>
            <div data-options="name:'Phone'">手机</div>
            <div data-options="name:'Address'">地址</div>
            <div data-options="name:'QQ'">QQ</div>
            <div data-options="name:'WW'">WW</div>
            <div data-options="name:'Tel'">电话</div>
            <div data-options="name:'Memo'">Memo</div>
            <div data-options="name:'Status'">Status</div>

        </div>
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>

</div>
</body>
