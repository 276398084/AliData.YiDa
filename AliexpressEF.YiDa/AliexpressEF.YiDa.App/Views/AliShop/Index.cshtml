@model IEnumerable<AliexpressEF.YiDa.Domain.AliShopType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">

    <script language="javascript" type="text/javascript">
        var grid;
        $(function () {
            grid = $('#dg').datagrid({
                url: '/AliShop/List',
                pageNumber: 1,
                idField: 'Id',
                iconCls: 'icon-view',
                height: 650,
                width: function () { return document.body.clientWidth * 0.9 },
                nowrap: true,
                autoRowHeight: false,
                striped: true,
                collapsible: true,
                pagination: true,
                pageSize: 100,
                pageList: [50, 100, 200],
                rownumbers: true,
                remoteSort: false,
                columns: [[
                { title: 'Id', field: 'Id', width: 80, sortable: true },
                { title: '店铺名称', field: 'ShopTitle', sortable: true },
                {
                    title: '状态', field: 'Status', width: 80, formatter: function (v, r, i) {
                        return v == 0 ? "<a href='javascript:gotoActive(0)'  target='_blank' alt='点击去授权页面' >未授权</a>" : "已授权";
                    }
                },
                {
                    title: '授权时间', field: 'TokenUpdateOn', width: 200, sortable: true, formatter: getDate
                }
                ]],
                toolbar: [{
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        ShowAddOrViewDialog();//实现添加记录的页面
                    }
                }, '-', {
                    id: 'btnEdit',
                    text: '修改',
                    iconCls: 'icon-edit',
                    handler: function () {
                        ShowEditOrViewDialog();//实现修改记录的方法
                    }
                }, '-', {
                    id: 'btnDelete',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {
                        del(grid, '/AliShop/Delete');//实现直接删除数据的方法
                    }
                }, '-', {
                    id: 'btnView',
                    text: '查看',
                    iconCls: 'icon-view',
                    handler: function () {
                        ShowEditOrViewDialog("view");//实现查看记录详细信息的方法
                    }
                }, '-', {
                    id: 'btnReload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //实现刷新栏目中的数据
                        grid.datagrid("reload");
                    }
                }]
            });

        });

        function gotoActive() {
            $.ajax({
                url: '/AliShop/GetAuthUrl',
                type: "Post",
                dataType: "json",
                success: function (data) {
                    if (data.IsSuccess) {
                        window.open();
                    }
                }
            });
        }

        function ShowAddOrViewDialog() {
           
            $.ajax({
                url: '/AliShop/GetAuthUrl',
                type: "Post",
                dataType: "json",
                success: function (result) {
                    window.showModalDialog(result.Result)
                }
            });
        }

        //编辑框
        function ShowEditOrViewDialog() {
            var id = getselectedRow(grid);
            if (id) {
                parent.$.modalDialog({
                    title: '编辑数据',
                    width: 350,
                    height: 120,
                    href: '/AliShop/edit/' + id,
                    buttons: [{
                        text: '修改',
                        handler: function () {
                            parent.$.modalDialog.penner_grid = grid;//将grid绑定到公共变量中
                            var f = parent.$.modalDialog.handler.find('#form');
                            f.submit();
                        }
                    }]
                });
            }
        }


        function doSearch() {
            search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
            grid.datagrid("load", {
                search: search
            });
        }
    </script>
    <div region="center">
        <fieldset>
            <legend>数据查询</legend>
            <table border="0">
                <tr>
                    <td>
                        <label>店铺名称:</label><input type='text' id='txtShopTitle' /><a href='#' class='easyui-linkbutton' iconcls='icon-search' onclick='doSearch();'>查询</a>
                    </td>

                </tr>
            </table>
        </fieldset>
        <table id="dg">
        </table>

    </div>
</body>
